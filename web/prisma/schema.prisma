// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

// Models
model Tenant {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
  auditLogs AuditLog[]
  documents Document[]
  chats     Chat[]
  projects  Project[]
  company   Company?
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  firstName     String?
  lastName      String?
  jobTitle      String?
  company       String?
  avatarUrl     String?  // URL to stored image
  passwordHash  String
  role          UserRole @default(USER)
  
  tenantId      String
  tenant        Tenant   @relation(fields: [tenantId], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  auditLogs     AuditLog[]
  documentsOwned Document[] @relation("DocumentOwner")
  sharedDocuments Document[] @relation("DocumentShares")
  
  chats         Chat[]
  projects      Project[]
  transcriptions Transcription[]
  protocols     Protocol[]
}

model AuditLog {
  id          String   @id @default(uuid())
  
  action      String   // e.g. "UC1_ANALYSIS", "LOGIN"
  modelUsed   String?  // e.g. "gpt-4", "gemini-pro"
  tokenCount  Int?
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  timestamp   DateTime @default(now())
}

model Document {
  id          String   @id @default(uuid())
  filename    String
  fileSize    Int
  mimeType    String
  
  storagePath String   // Path in the file system or object storage
  
  // Optional: Simple text extraction storage for V1
  parsedContent String?  @db.Text 
  
  // Shared with specific users
  sharedWith  User[]   @relation("DocumentShares")

  userId      String
  user        User     @relation("DocumentOwner", fields: [userId], references: [id])
  
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  createdAt   DateTime @default(now())

  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id])
}

model Chat {
  id        String   @id @default(uuid())
  title     String
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])

  messages  Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id        String   @id @default(uuid())
  content   String   @db.Text
  role      String   // "user" or "assistant" or "system"

  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

enum TranscriptionSource {
  UPLOAD
  RECORDING
}

model Transcription {
  id        String              @id @default(uuid())
  text      String              @db.Text
  title     String?
  source    TranscriptionSource
  
  userId    String
  user      User                @relation(fields: [userId], references: [id])
  
  createdAt DateTime            @default(now())

  protocols Protocol[]
}

model AIModelConfig {
  id        String   @id @default(uuid())
  provider  String   // "OpenAI" or "Gemini"
  mode      String   // "fast" or "thinking"
  modelId   String   // e.g. "gpt-3.5-turbo"
  
  updatedAt DateTime @updatedAt
  
  @@unique([provider, mode]) 
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?  @db.Text
  nonGoals    String?  @db.Text

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  chats       Chat[]
  documents   Document[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Company Management Models
model Company {
  id              String   @id @default(uuid())
  name            String
  logo            String?  // URL to company logo
  industry        String?  // Branche
  foundedDate     DateTime?
  employeeCount   Int      @default(0)
  description     String?  @db.Text
  
  tenantId        String   @unique
  tenant          Tenant   @relation(fields: [tenantId], references: [id])
  
  news            CompanyNews[]
  strategies      CompanyStrategy[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model CompanyNews {
  id              String   @id @default(uuid())
  title           String
  summary         String   @db.Text  // AI-generated summary
  sourceUrls      String[] // Array of URLs from research
  rawData         String?  @db.Text  // Original research data (optional)
  
  companyId       String
  company         Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  researchDate    DateTime @default(now()) // When the research was conducted
  createdAt       DateTime @default(now())
  
  @@index([companyId, researchDate])
}

model CompanyStrategy {
  id              String   @id @default(uuid())
  title           String
  description     String   @db.Text
  type            String   // "GOAL", "STRATEGY", "INITIATIVE", "VALUE"
  priority        Int      @default(0) // For ordering
  isActive        Boolean  @default(true)
  
  // RAG metadata
  embedding       String?  @db.Text // JSON array of embedding vector (optional for future)
  
  companyId       String
  company         Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([companyId, isActive])
}

model Protocol {
  id              String   @id @default(uuid())
  title           String
  content         String   @db.Text
  
  transcriptionId String?
  transcription   Transcription? @relation(fields: [transcriptionId], references: [id])
  
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
